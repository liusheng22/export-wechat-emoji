{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "withGlobalTauri": true,
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "导出微信表情包",
    "version": "0.0.3"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "path": {
        "all": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://*", "http://*"]
      },
      "dialog": {
        "message": true
      },
      "shell": {
        "execute": true,
        "scope": [
          {
            "name": "open-dir",
            "cmd": "open",
            "args": [{ "validator": "\\S+" }]
          }
        ]
      },
      "fs": {
        "readDir": true,
        "exists": true,
        "createDir": true,
        "readFile": true,
        "writeFile": true,
        "copyFile": true,
        "removeFile": true,
        "scope": ["**"]
      }
    },
    "windows": [
      {
        "title": "导出微信表情包",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "cn.laijiayang.export-wechat-emoji",
      "macOS": {
        "exceptionDomain": "wxapp.tc.qq.com,vweixinf.tc.qq.com"
      },
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "updater": {
      "active": false,
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEM2RDhCOTg1MDgzRkUzMjYKUldRbTR6OEloYm5ZeG9VL3UzcHg4UWtyM1Y0WTdPRkRHSC9DWkRKSitvOVBhUDlONGV1SmE2MkcK",
      "windows": {
        "installMode": "passive",
        "installerArgs": []
      }
    }
  }
}
